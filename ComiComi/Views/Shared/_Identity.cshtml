
@inject UserManager<ApplicationUser> UserManager;
@if(!User.Identity.IsAuthenticated)
{
    <a class="btn btn-outline-light my-2 my-sm-0" asp-controller="Account" asp-action="Login">
        <i class="bi bi-box-arrow-in-right"></i> Log In
    </a>
    <span style="padding: 5px;"></span>
    <a class="btn btn-outline-light my-2 my-sm-0" asp-controller="Account" asp-action="Register">
        <i class="bi bi-person-plus"></i> Register
    </a>  
    
}
else{
    <div class="dropdown">
        <button class="btn btn-outline-success dropdown-toggle" type="button" id="profile-btn" data-bs-toggle="dropdown" aria-expanded="false"><i class="bi bi-person-badge"></i> Hello @UserManager.GetUserName(User) </button>
        <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="profile-btn">
            <li>
                <a class="dropdown-item" asp-controller="Order" asp-action="Index"><i class="bi bi-list"></i>Orders</a>
                                
            </li>
            @if (User.IsInRole("Admin"))
            {
                <li>
                    <a class="dropdown-item" asp-controller="Account" asp-action="Users">
                    <i class="bi bi-people"></i>Users
                </a>
            </li>
            }
            <li>
                <form asp-controller="Account" asp-action="Logout">
                    <button class="dropdown-item">
                        <i class="bi bi-box-arrow-in-right"></i> Log Out
                    </button>
                </form>
            </li>
        </ul>
    </div>
    <span style="padding: 5px;"></span>
    
}
