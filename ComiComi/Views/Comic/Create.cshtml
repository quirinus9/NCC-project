@using ComiComi.Data.Enums
@model NewComicVM

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Comic</h4>
<hr />
<div class="row">
    <div class="col-md-8 offset-2">
        <form asp-action="Create" asp-controller="Comic" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Title" class="control-label"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CoverPhotoURL" class="control-label"></label>
                        <input asp-for="CoverPhotoURL" class="form-control" />
                        <span asp-validation-for="CoverPhotoURL" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price" class="control-label"></label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Genre" class="control-label"></label>
                        <select asp-for="Genre" class="form-control" asp-items="Html.GetEnumSelectList<Genre>()">
                            <option value="" disabled selected>---Choose a Genre---</option>
                        </select>
                        <span asp-validation-for="Genre" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Serializaton" class="control-label"></label>
                        <select asp-for="Serializaton" class="form-control" asp-items="Html.GetEnumSelectList<Serialization>()">
                            <option value="" disabled selected>---Choose a Serialization Type---</option>
                        </select>
                        <span asp-validation-for="Serializaton" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Status" class="control-label"></label>
                        <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<Status>()">
                            <option value="" disabled selected>---Status of Comic---</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Volume" class="control-label"></label>
                        <input asp-for="Volume" class="form-control" />
                        <span asp-validation-for="Volume" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Day" class="control-label"></label>
                        <select asp-for="Day" class="form-control" asp-items="Html.GetEnumSelectList<Day>()">
                            <option value="" disabled selected>---Choose the Day of New Chapter Release---</option>
                        </select>
                        <span asp-validation-for="Day" class="text-danger"></span>
                    </div>

                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="AuthorId" class="control-label"></label>
                        <select asp-for="AuthorId" class ="form-control" asp-items="ViewBag.Authors">
                            <option value="" disabled selected>---Choose the Author---</option>
                        </select>
                    </div>
                     <div class="form-group">
                        <label asp-for="ArtistId" class="control-label"></label>
                        <select asp-for="ArtistId" class ="form-control" asp-items="ViewBag.Artists">
                            <option value="" disabled selected>---Choose the Artist---</option>
                        </select>
                    </div>
                     <div class="form-group">
                        <label asp-for="PublisherId" class="control-label"></label>
                        <select asp-for="PublisherId" class ="form-control" asp-items="ViewBag.Publishers">
                            <option value="" disabled selected>---Choose the Publisher---</option>
                        </select>
                    </div>
                    <div class="col-md-4 offset-4 text-center">
                        <img width="100%" id="CoverPhotoUrlPreview" />
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-outline-primary float-end mt-2 mt-sm-2" />
                <a asp-action="Index" class="btn btn-outline-secondary mt-2 mt-sm-2">Comics</a>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <script>
        $("#CoverPhotoURL").on("change", function(){
            var output = document.getElementById("CoverPhotoUrlPreview");
            output.src = $(this).val();
        })
    </script>
}

